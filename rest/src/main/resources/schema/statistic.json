{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://envirocar.org/api/stable/schema/statistic.json#",
    "type": "object",
    "required": [
        "min",
        "max",
        "avg",
        "measurements",
        "users",
        "tracks",
        "phenomenon"
    ],
    "properties": {
        "phenomenon": {
            "$ref": "https://envirocar.org/api/stable/schema/phenomenon.json#"
        },
        "measurements": {
            "type": "integer",
            "minimum": 0
        },
        "users": {
            "type": "integer",
            "minimum": 0
        },
        "tracks": {
            "type": "integer",
            "minimum": 0
        },
        "sensors": {
            "type": "integer",
            "minimum": 0
        },
        "min": {
            "type": "number"
        },
        "max": {
            "type": "number"
        },
        "avg": {
            "type": "number"
        }
    }
}
