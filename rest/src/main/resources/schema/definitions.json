{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "username": {
    "pattern": "^[_A-Za-z0-9-]{4,}$",
    "type": "string"
  },
  "date-time": {
    "format": "date-time",
    "type": "string"
  },
  "mail": {
    "pattern": "^[_A-Za-z0-9-+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$",
    "type": "string"
  },
  "optional-user-properties": {
    "properties": {
      "firstName": {
        "type": "string"
      },
      "lastName": {
        "type": "string"
      },
      "country": {
        "type": "string"
      },
      "location": {
        "$ref": "geometry.json#"
      },
      "aboutMe": {
        "type": "string"
      },
      "url": {
        "type": "string",
        "format": "uri"
      },
      "dayOfBirth": {
        "type": "string",
        "format": "date"
      },
      "gender": {
        "type": "string",
        "enum": [
          "m",
          "f"
        ]
      },
      "language": {
        "type": "string",
        "pattern": "^[a-z]{2}[-_][A-Z]{2}$"
      },
      "badges": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "acceptedTermsOfUseVersion": {
        "type": "string",
        "format": "date"
      },
      "acceptedPrivacyStatementVersion": {
        "type": "string",
        "format": "date"
      }
    }
  },
  "track-ref": {
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "modified": {
        "type": "string",
        "format": "date-time"
      },
      "name": {
        "type": "string"
      },
      "begin": {
        "type": "string",
        "format": "date-time"
      },
      "end": {
        "type": "string",
        "format": "date-time"
      },
      "sensor": {
        "$ref": "sensor.json#"
      },
      "length": {
        "type": "number"
      },
      "status": {
        "$ref": "#/track-status"
      }
    }
  },
  "track-status": {
    "type": "string",
    "enum": [
      "finished",
      "ongoing"
    ]
  }
}
