{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.envirocar.org/measurement.create.json#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "geometry",
        "properties"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "Feature"
            ]
        },
        "geometry": {
            "$ref": "http://schema.envirocar.org/geometry.json#"
        },
        "properties": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "time"
            ],
            "properties": {
                "sensor": {
                    "type": "string",
                    "description": "the id of an existing sensor"
                },
                "time": {
                    "type": "string",
                    "format": "date-time"
                },
                "phenomenons": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "value"
                        ],
                        "properties": {
                            "value": {
                                "type": [
                                    "string",
                                    "number",
                                    "boolean"
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}
