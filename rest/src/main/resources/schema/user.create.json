{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://envirocar.org/api/stable/schema/user.create.json#",
    "type": "object",
    "required": [
        "name",
        "mail",
        "token",
        "acceptedTerms",
        "acceptedPrivacy"
    ],
    "allOf": [
        {
            "$ref": "https://envirocar.org/api/stable/schema/definitions.json#/optional-user-properties"
        },
        {
            "properties": {
                "name": {
                    "$ref": "https://envirocar.org/api/stable/schema/definitions.json#/username"
                },
                "mail": {
                    "$ref": "https://envirocar.org/api/stable/schema/definitions.json#/mail"
                },
                "token": {
                    "type": "string"
                },
                "acceptedTerms": {
                    "type": "boolean"
                },
                "acceptedPrivacy": {
                    "type": "boolean"
                }
            }
        }
    ]
}