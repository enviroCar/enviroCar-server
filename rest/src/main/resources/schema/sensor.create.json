{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://envirocar.org/api/stable/schema/sensor.create.json#",
    "allOf": [
        {
            "$ref": "https://envirocar.org/api/stable/schema/sensor.json#/definitions/base"
        },
        {
            "oneOf": [
                {
                    "not": {
                        "$ref": "https://envirocar.org/api/stable/schema/sensor.json#/definitions/car-type"
                    }
                },
                {
                    "allOf": [
                        {
                            "$ref": "https://envirocar.org/api/stable/schema/sensor.json#/definitions/car-type"
                        },
                        {
                            "$ref": "#/definitions/car-properties"
                        }
                    ]
                }
            ]
        }
    ],
    "definitions": {
        "car-properties": {
            "allOf": [
                {
                    "$ref": "https://envirocar.org/api/stable/schema/sensor.json#/definitions/car-properties"
                },
                {
                    "properties": {
                        "properties": {
                            "required": [
                                "manufacturer",
                                "model",
                                "fuelType",
                                "constructionYear"
                            ]
                        }
                    }
                }
            ]
        }
    }
}